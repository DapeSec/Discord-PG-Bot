FROM python:3.9-slim

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements file
COPY requirements-orchestrator.txt .

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements-orchestrator.txt

# Copy the entire source code
COPY src/ ./src/

# Copy scripts
COPY scripts/ ./scripts/
RUN chmod +x scripts/*.sh

# Create a non-root user for security
RUN useradd -m -u 1000 orchestrator && chown -R orchestrator:orchestrator /app
USER orchestrator

# Expose the orchestrator port
EXPOSE 5003

# Command to run the new V2 Orchestrator with Gunicorn (optimized for single LLM instance)
CMD ["gunicorn", "--timeout", "1800", "-w", "1", "--threads", "1", "-b", "0.0.0.0:5003", "src.app.orchestrator.server:app"] 